<Window x:Class="GameLauncher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:GameLauncher.ViewModels"
        xmlns:converters="clr-namespace:GameLauncher.Converters"
        mc:Ignorable="d"
        Title="Voidborn Launcher"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <converters:PageToVisibilityConverter x:Key="LibraryPageVisibility" Page="Library"/>
        <converters:PageToVisibilityConverter x:Key="StorePageVisibility" Page="Store"/>
        <converters:PageToVisibilityConverter x:Key="DownloadsPageVisibility" Page="Downloads"/>
        <converters:PageToVisibilityConverter x:Key="SettingsPageVisibility" Page="Settings"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3F3F46"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- SIDEBAR -->
        <StackPanel Width="200"
                    Background="#FF2D2D30"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Stretch"
                    Margin="10">
            <TextBlock Text="🎮 VOIDBORN"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,20,0,30"
                       HorizontalAlignment="Center"/>

            <!-- Navigation Buttons -->
            <Button Content="Library" Style="{StaticResource SidebarButtonStyle}" Command="{Binding ShowLibraryCommand}" />
            <Button Content="Store" Style="{StaticResource SidebarButtonStyle}" Command="{Binding ShowStoreCommand}" />
            <Button Content="Downloads" Style="{StaticResource SidebarButtonStyle}" Command="{Binding ShowDownloadsCommand}" />
            <Button Content="Settings" Style="{StaticResource SidebarButtonStyle}" Command="{Binding ShowSettingsCommand}" />

            <StackPanel VerticalAlignment="Bottom" Margin="0,10,0,0">
                <Separator Margin="0,20"/>
                <TextBlock Text="v1.0.0"
                           Foreground="Gray"
                           FontSize="10"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- MAIN CONTENT -->
        <Grid Background="#FF1E1E1E">
            <!-- Library Page -->
            <Grid Visibility="{Binding CurrentPage, Converter={StaticResource LibraryPageVisibility}}">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding InstalledGames}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="10" 
                                        Width="280" 
                                        Height="400"
                                        Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                    </Border.Effect>

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="180"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Game Image -->
                                        <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                                            <Image Source="{Binding ImageUrl}" 
                                                   Stretch="UniformToFill" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Game Info -->
                                        <StackPanel Grid.Row="1" Margin="15">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="18" 
                                                       FontWeight="Bold" 
                                                       Foreground="White" 
                                                       TextWrapping="Wrap" 
                                                       Margin="0,0,0,5"/>

                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" 
                                                       Foreground="#FFCCCCCC" 
                                                       TextWrapping="Wrap" 
                                                       MaxHeight="60" 
                                                       Margin="0,0,0,10"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Size: " FontSize="11" Foreground="#FF9E9E9E"/>
                                                <TextBlock Text="{Binding FormattedSize}" FontSize="11" Foreground="#FF9E9E9E"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Version: " FontSize="11" Foreground="#FF9E9E9E"/>
                                                <TextBlock Text="{Binding Version}" FontSize="11" Foreground="#FF9E9E9E"/>
                                            </StackPanel>

                                            <StackPanel>
                                                <TextBlock Text="       " FontSize="12" Foreground="Gray" />
                                                <TextBlock Text="{Binding Publisher}" FontSize="16" Foreground="Gray" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="2" Margin="15,0,15,15">
                                            <!-- Download Progress -->
                                            <ProgressBar Value="{Binding DownloadProgress}" 
                                                         Height="4" 
                                                         Background="#FF3F3F46" 
                                                         Foreground="#FF007ACC" 
                                                         Margin="0,0,0,10"
                                                         Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Play Button -->
                                            <Button Content="Play" 
                                                    Background="#FF00AA00" 
                                                    Foreground="White" 
                                                    BorderThickness="0" 
                                                    Padding="0,8" 
                                                    FontWeight="Bold"
                                                    Command="{Binding DataContext.LaunchGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                          VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FF00CC00"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Store Page -->
            <Grid Visibility="{Binding CurrentPage, Converter={StaticResource StorePageVisibility}}">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding StoreGames}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FF2D2D30" 
                                        BorderBrush="#FF3F3F46" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="10" 
                                        Width="280" 
                                        Height="400"
                                        Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                    </Border.Effect>

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.DownloadGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="180"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Game Image -->
                                        <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                                            <Image Source="{Binding ImageUrl}" 
                                                   Stretch="UniformToFill" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Game Info -->
                                        <StackPanel Grid.Row="1" Margin="15">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontSize="18" 
                                                       FontWeight="Bold" 
                                                       Foreground="White" 
                                                       TextWrapping="Wrap" 
                                                       Margin="0,0,0,5"/>

                                            <TextBlock Text="{Binding Description}" 
                                                       FontSize="12" 
                                                       Foreground="#FFCCCCCC" 
                                                       TextWrapping="Wrap" 
                                                       MaxHeight="60" 
                                                       Margin="0,0,0,10"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Size: " FontSize="11" Foreground="#FF9E9E9E"/>
                                                <TextBlock Text="{Binding FormattedSize}" FontSize="11" Foreground="#FF9E9E9E"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Version: " FontSize="11" Foreground="#FF9E9E9E"/>
                                                <TextBlock Text="{Binding Version}" FontSize="11" Foreground="#FF9E9E9E"/>
                                            </StackPanel>

                                            <StackPanel>
                                                <TextBlock Text="       " FontSize="12" Foreground="Gray" />
                                                <TextBlock Text="{Binding Publisher}" FontSize="16" Foreground="Gray" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Row="2" Margin="15,0,15,15">
                                            <!-- Download Progress -->
                                            <ProgressBar Value="{Binding DownloadProgress}" 
                                                         Height="4" 
                                                         Background="#FF3F3F46" 
                                                         Foreground="#FF007ACC" 
                                                         Margin="0,0,0,10"
                                                         Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                            <!-- Install Button -->
                                            <Button Content="Install" 
                                                    Background="#FF007ACC" 
                                                    Foreground="White" 
                                                    BorderThickness="0" 
                                                    Padding="0,8" 
                                                    FontWeight="Bold"
                                                    Command="{Binding DataContext.DownloadGameCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding IsInstalled, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                            CornerRadius="4" 
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                          VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FF1F8AD6"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Downloads Page -->
            <Grid Visibility="{Binding CurrentPage, Converter={StaticResource DownloadsPageVisibility}}">
                <TextBlock Text="⬇️ Downloads Page"
                           FontSize="32"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Settings Page -->
            <Grid Visibility="{Binding CurrentPage, Converter={StaticResource SettingsPageVisibility}}">
                <TextBlock Text="⚙️ Settings Page"
                           FontSize="32"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
